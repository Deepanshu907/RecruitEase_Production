<%- include('./recruiterHomeHeader.ejs') %>
<style>
    form {
        width: 50%;
        background-color: #f8f8f8;
        padding: 25px;
        border-radius: 8px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        font-family: Arial, sans-serif;
    }

    form h2 {
        color: #333;
        margin-bottom: 10px;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    td {
        padding: 10px;
        vertical-align: top;
    }

    label {
        font-weight: bold;
        color: #333;
    }

    .input {
        width: 100%;
        padding: 10px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 14px;
        box-sizing: border-box;
        height: auto;
    }

    input[readonly] {
        background-color: #e9ecef;
        cursor: not-allowed;
    }

    #inputbtn {
        padding: 8px 20px;
        margin-top: 5px;
        font-size: 14px;
        background-color: #6c63ff;
        color: white;
        border: none;
        border-radius: 4px;
        cursor: pointer;
    }

    #inputbtn:hover {
        background-color: #4a47c6;
    }

    caption span {
        color: red;
        font-size: 15px;
        font-weight: bold;
    }

    @media screen and (max-width: 768px) {
        form {
            width: 90%;
        }
    }
</style>

<br>
<center>
<form action="/vacancy/addVacancy" method="post">
    <table>
        <caption>
            <h2>Add Vacancy</h2>
            <span style="color:red"><%= message %></span>
        </caption>
        <tr>
            <td><label>Post</label></td>
            <td><input type="text" placeholder="Enter Post" class="input" name="post"></td>
        </tr>
        <tr>
            <td><label>Subject</label></td>
            <td>
                <select name="subject" class="input">
                    <option value="">Select Subject</option>
                    <option value="Mathematics">Mathematics</option>
                    <option value="Physics">Physics</option>
                    <option value="Business Maths">Business Maths</option>
                    <option value="Programming Language">Programming Language</option>
                    <option value="Aptitude">Aptitude</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><label>Location</label></td>
            <td><input type="text" placeholder="Enter Location" class="input" name="location"></td>
        </tr>
        <tr>
            <td><label>Criteria</label></td>
            <td>
                <select name="criteria" class="input">
                    <option value="">Select Criteria</option>
                    <option value="Graduate">Graduate</option>
                    <option value="Post Graduate">Post Graduate</option>
                    <option value="P.hd">P.hd</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><label>Experience</label></td>
            <td>
                <select name="experience" class="input">
                    <option value="">Select Experience</option>
                    <option value="Fresher">Fresher</option>
                    <option value="1+ Year">1+ Year</option>
                    <option value="2+ Year">2+ Year</option>
                    <option value="3+ Year">3+ Year</option>
                    <option value="5+ Year">5+ Year</option>
                    <option value="10+ Year">10+ Year</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><label>Mode</label></td>
            <td>
                <select name="mode" class="input">
                    <option value="">Select Mode</option>
                    <option value="PartTime">PartTime</option>
                    <option value="FullTime">FullTime</option>
                </select>
            </td>
        </tr>
        <tr>
            <td><label>Vacancy</label></td>
            <td><input name="vacancy" type="number" class="input" step="1" min="0" max="1000" placeholder="Enter No. Of Vacancy"></td>
        </tr>
        <tr>
            <td><label>Salary</label></td>
            <td><input name="salary" type="number" class="input" step="1" min="0" placeholder="Enter Salary"></td>
        </tr>
        <tr>
            <td><label>Adv.Date</label></td>
            <td><input type="date" class="input" name="advDate"></td>
        </tr>
        <tr>
            <td><label>Last Date</label></td>
            <td><input type="date" class="input" name="lastDate"></td>
        </tr>
        <tr>
            <td><label>Email</label></td>
            <td><input type="email" class="input" name="email" value="<%= email %>" readonly></td>
        </tr>
        <tr>
            <td><label>RecruiterType</label></td>
            <td><input type="text" class="input" name="recruiter" value="<%= recruiterObj.recruiter %>" readonly></td>
        </tr>
        <tr>
            <td><label>RecruiterName</label></td>
            <td><input type="text" class="input" name="name" value="<%= recruiterObj.name %>" readonly></td>
        </tr>
        <tr>
            <td></td>
            <td>
                <input type="submit" id="inputbtn" value="Add Vacancy"> <br>
                <input type="reset" id="inputbtn" value="Reset">
            </td>
        </tr>
    </table>
</form>
</center>
