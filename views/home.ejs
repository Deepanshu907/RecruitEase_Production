<script>
    var typeData = new Typed(".role", {
        strings: [
            "Welcome to RecruitEase",
            "Where dreams comes True"
        ],
        loop: true,
        typeSpeed: 100,
        backSpeed: 50,
        backDelay: 2000,
    });
</script>
