<%- include('./adminHomeHeader.ejs')%>

<!-- Typed.js & Font Awesome -->
<script src="https://cdn.jsdelivr.net/npm/typed.js@2.0.12"></script>
<script src="https://kit.fontawesome.com/58a810656e.js" crossorigin="anonymous"></script>

<style>
/* Base Reset */
body {
    margin: 0;
    font-family: 'Segoe UI', sans-serif;
    background: linear-gradient(to bottom right, #f9f9f9, #edf1ff);
    color: #333;
    overflow-x: hidden;
}

img {
    max-width: 100%;
    height: auto;
    display: block;
    border-radius: 12px;
}

/* Headings with subtle gradient text */
h2 {
    font-size: 32px;
    background: linear-gradient(to right, #4a5fd3, #7289fa);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    margin-bottom: 15px;
}

/* Intro Section */
.intro-section {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 80px 40px 60px;
    background: linear-gradient(120deg, #ffffff, #f2f6ff);
    flex-wrap: wrap;
    gap: 40px;
}

.intro-text {
    flex: 1;
    font-size: 2.5rem;
    font-weight: 700;
    color: #2e56d3;
    max-width: 600px;
    line-height: 1.3;
}

.intro-text span {
    background: linear-gradient(to right, #4a5fd3, #00c3ff);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* Intro Image */
.intro-image img {
    width: 280px;
    height: 280px;
    object-fit: cover;
    border-radius: 50%;
    box-shadow: 0 6px 20px rgba(0, 0, 0, 0.1);
    border: 5px solid #ffffff;
    transition: transform 0.3s ease;
}

.intro-image img:hover {
    transform: scale(1.05);
}

/* Content */
section.content {
    padding: 60px 30px;
    background: linear-gradient(to bottom, #f9fbff, #e8edff);
}

.content-wrapper {
    max-width: 1150px;
    margin: auto;
}

/* Highlight Box */
.highlight-box {
    background: linear-gradient(to right, #eef3ff, #dce6ff);
    border-left: 5px solid #4a5fd3;
    padding: 20px;
    border-radius: 8px;
    margin-top: 25px;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.03);
}

/* Features */
.features-container {
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    margin-top: 30px;
}

.feature-box {
    flex: 1 1 250px;
    background: linear-gradient(145deg, #ffffff, #f2f6ff);
    padding: 25px;
    border-radius: 12px;
    box-shadow: 0 5px 12px rgba(0, 0, 0, 0.05);
    transition: transform 0.2s ease, box-shadow 0.2s ease;
    cursor: default;
}

.feature-box:hover {
    transform: translateY(-4px);
    box-shadow: 0 10px 20px rgba(0, 0, 0, 0.08);
}

/* Roles Section */
.roles-container {
    display: flex;
    flex-wrap: wrap;
    gap: 25px;
    justify-content: center;
    margin-top: 40px;
}

.role-card {
    flex: 1 1 300px;
    background: linear-gradient(145deg, #ffffff, #f1f4ff);
    border-radius: 16px;
    padding: 25px 30px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.06);
    border-left: 6px solid #4a5fd3;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
}

.role-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 16px 40px rgba(0, 0, 0, 0.08);
}

.role-card.candidate {
    border-left-color: #ff715b;
}

.role-title {
    font-size: 22px;
    font-weight: 600;
    margin-bottom: 16px;
    color: #2e2e2e;
}

.role-card ul {
    list-style-type: disc;
    padding-left: 20px;
}

.role-card li {
    font-size: 16px;
    color: #444;
    line-height: 1.6;
    margin-bottom: 10px;
}

/* Responsive Design */
@media (max-width: 768px) {
    .intro-section {
        flex-direction: column;
        text-align: center;
        padding: 50px 20px;
    }

    .intro-text {
        font-size: 1.8rem;
    }

    .intro-image {
        padding: 20px 0;
    }

    section.content {
        padding: 40px 20px;
    }

    .feature-box {
        flex: 1 1 100%;
    }

    h2 {
        font-size: 24px !important;
    }

    p,
    li {
        font-size: 16px;
    }

    .roles-container {
        padding: 20px;
    }
}
</style>

<!-- Intro Section with Typed Text and Image -->
<section class="intro-section">
    <div class="intro-text">
        <span class="role"></span>
    </div>
    <div class="intro-image">
        <img src="images/job.jpg" alt="RecruitEase Banner">
    </div>
</section>

<!-- Content Section -->
<section class="content">
    <div class="content-wrapper">
        <!-- About -->
        <h2 style="color: #222; font-size: 32px;">About <span style="color: #4a5fd3;">RecruitEase Admin Panel</span></h2>
        <p style="color: #555; line-height: 1.6;">
            The RecruitEase Admin Panel provides powerful tools to monitor and manage all platform activities, ensuring secure, efficient, and fair recruitment processes.
        </p>
        <div class="highlight-box">
            <strong style="color: #2d3e50;">Admin Mission</strong><br>
            Empowering platform governance by overseeing users, vacancies, and system operations with transparency and control.
        </div>

        <!-- Admin-Specific Features -->
        <h2 style="color: #222; font-size: 28px; margin-top: 60px;">Admin Features</h2>
        <div class="features-container">
            <div class="feature-box">Manage All Candidates</div>
            <div class="feature-box">Monitor Recruiter Activities</div>
            <div class="feature-box">View and Moderate Vacancies</div>
            <div class="feature-box">Track Applications System-Wide</div>
            <div class="feature-box">Secure Authentication & Access</div>
            <div class="feature-box">Admin-Level Data Visibility</div>
        </div>

        <!-- Admin Role and Responsibility -->
        <h2 style="color: #222; font-size: 28px; margin-top: 60px;">Your Role & Responsibility</h2>
        <div class="roles-container">
            <div class="role-card">
                <div class="role-title" style="color:#4a5fd3;">Admin</div>
                <ul>
                    <li>Oversee and verify recruiter and candidate accounts</li>
                    <li>Ensure appropriate job postings across the platform</li>
                    <li>Analyze user behavior and application trends</li>
                    <li>Maintain platform compliance and data integrity</li>
                    <li>Handle escalations and ensure smooth operations</li>
                </ul>
            </div>
        </div>
    </div>
</section>


<!-- Typed.js Script -->
<script>
    var typeData = new Typed(".role", {
        strings: [
            "Welcome to RecruitEase",
            "Admin Panel",
            "<%= email %>"
        ],
        loop: true,
        typeSpeed: 100,
        backSpeed: 50,
        backDelay: 2000,
    });
</script>
